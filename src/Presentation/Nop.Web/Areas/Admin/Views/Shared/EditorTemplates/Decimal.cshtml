@model Decimal
<input asp-for="@Model" />
@{
    var postfix = "";
    if (ViewData.ContainsKey("postfix") && ViewData["postfix"] != null)
    {
        postfix = ViewData["postfix"].ToString();
    }
}
<script>
    $(document).ready(function () {
        $("#@Html.IdForModel()").kendoNumericTextBox({
            value: "@Model.ToString(CultureInfo.InvariantCulture)",
            min: @decimal.MinValue.ToString(CultureInfo.InvariantCulture),
            max: @decimal.MaxValue.ToString(CultureInfo.InvariantCulture),
            decimals: 4,
            restrictDecimals: true,
            format: "#.0000 @postfix"
        });
    });
</script>